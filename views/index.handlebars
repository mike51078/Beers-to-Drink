<h1>Eat-Da-Burger!</h1>


<h2>Burgers that need to be devoured!</h2>

<ul>
    {{#each burgers}}
        {{#unless this.devoured}}
            <button type = "submit" class = "change-devoured" data-id = "{{id}}" data-change = "{{devoured}}">{{this.burger_name}}</button>
        {{/unless}}
    {{/each}}
</ul>

<h2>Burgers already devoured!</h2>
    <ul>
        {{#each burgers}}
            {{#if this.devoured}}
            <button type = "submit" class = "change-devoured" data-id = "{{id}}" data-change = "{{devoured}}">{{this.burger_name}}</button>
            {{/if}}
        {{/each}}
    </ul>

<h2>Make a New Burger</h2>
<form class = "create-form" action= "/api/burgers" method="POST">

    <div class = "form-group" >
            <label for = "burg">Type of Hamburger: </label>
            <input type = "text" id = "burg" class = "burger_change" name = "burger_name">
    </div>

    <button type = "submit">Add Burger</button>
</form>
